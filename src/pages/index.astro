---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDate } from "../lib/formatDate";
import { Link } from "../lib/Link";
import { Paragraph } from "../lib/prose/Paragraph";
import type { PostFrontmatter } from "../types";

let posts = await Astro.glob<PostFrontmatter>("../../posts/**/*.mdx");

if (import.meta.env.PROD) {
  posts = posts.filter((post) => !post.frontmatter.draft);
}

posts.sort((a, b) => {
  return (
    new Date(b.frontmatter.date).getTime() -
    new Date(a.frontmatter.date).getTime()
  );
});
---

<BaseLayout title="Krishnan" description="Blog">
  <h1 slot="header-content" class="text-gray-600 dark:text-gray-500">
    krishnan
  </h1>
  <main class="zaduma-prose py-10">
    <Paragraph>
      I build AI-driven products with a strong focus on UX, visual learning, and
      modern web stacks, turning complex ideas into polished real-world apps.
    </Paragraph>

    <Paragraph>
      Previously worked as an engineer in consumer fintech and B2B startups.
      Currently on a sabbatical exploring LLMs, agent systems, and indie product
      building.
    </Paragraph>
  </main>
  <ul>
    {
      posts.map(({ frontmatter }) => {
        const date = new Date(frontmatter.date);

        return (
          <li>
            <Link
              href={frontmatter.path}
              class="flex flex-row justify-between gap-2"
              noUnderline
            >
              <h2 class="font-sans text-gray-800 dark:text-gray-300">
                {frontmatter.title}
              </h2>
              <time
                datetime={date.toISOString()}
                class="shrink-0 tabular-nums tracking-tighter text-gray-600 dark:text-gray-400"
              >
                {formatDate(date)}
              </time>
            </Link>
          </li>
        );
      })
    }
  </ul>
  <style>
    ul:hover li:not(:hover) :where(h2, time) {
      @apply text-gray-600 transition-colors;
    }
    :global(.dark) ul:hover li:not(:hover) :where(h2, time) {
      @apply text-gray-500;
    }
  </style>
</BaseLayout>
